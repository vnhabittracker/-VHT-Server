<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="11"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar_empty"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/tvRealName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAvatar"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="User-01" />

            <TextView
                android:id="@+id/tvUserDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRealName"
                android:gravity="center"
                android:textSize="14sp"
                android:text="Something" />

            <RelativeLayout
                android:id="@+id/ll_banner1"
                android:layout_below="@+id/tvUserDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingStart="20dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_border">

                <LinearLayout
                    android:id="@+id/ll_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/bookmark"/>
                    <TextView
                        android:id="@+id/tvStartedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:textSize="15sp"
                        android:text="12/11/2017"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_start_date"
                    android:paddingTop="5dp"
                    android:textStyle="bold"
                    android:text="Ngày tham gia"/>

                <LinearLayout
                    android:id="@+id/ll_userScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/certificate"/>
                    <TextView
                        android:id="@+id/tvUserScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:textSize="15sp"
                        android:text="1105"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_start_date"
                    android:layout_alignStart="@+id/ll_userScore"
                    android:paddingTop="5dp"
                    android:textStyle="bold"
                    android:text="Điểm tích lũy"/>

                <LinearLayout
                    android:id="@+id/ll_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/cup"/>
                    <TextView
                        android:id="@+id/tvLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:paddingEnd="5dp"
                        android:textSize="15sp"
                        android:text="10"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/lb_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_level"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="5dp"
                    android:textStyle="bold"
                    android:text="Cấp độ"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_banner2"
                android:layout_below="@+id/ll_banner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:paddingBottom="20dp"
                    android:background="#ffffff">
                    <ImageView
                        android:src="@drawable/feet"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:id="@+id/tvCurrentContinue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="20 ngày"/>
                    <TextView
                        android:layout_below="@+id/tvCurrentContinue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Chuỗi hiện tại"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:paddingBottom="20dp"
                    android:background="#ffffff">
                    <ImageView
                        android:src="@drawable/dumbbell"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/tvBestContinue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="36 ngày"/>
                    <TextView
                        android:layout_below="@+id/tvBestContinue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Chuỗi tốt nhất"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_banner3"
                android:layout_below="@+id/ll_banner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:paddingBottom="20dp"
                    android:background="#ffffff">
                    <ImageView
                        android:src="@drawable/rings"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:id="@+id/tvContinueUsing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="7 ngày"/>
                    <TextView
                        android:layout_below="@+id/tvContinueUsing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Số ngày sử dụng"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:paddingBottom="20dp"
                    android:background="#ffffff">
                    <ImageView
                        android:src="@drawable/fire"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/tvTotalHabit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="120"/>
                    <TextView
                        android:layout_below="@+id/tvTotalHabit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Thói quen đã tạo"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/lb_suggest"
                android:layout_below="@+id/ll_banner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingStart="15dp"
                android:textColor="#2d6fda"
                android:text="Đề xuất"
                android:textSize="18sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSuggestion"
                android:layout_below="@id/lb_suggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="20dp"/>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:onClick="showStatics"
            android:id="@+id/report"
            android:padding="10dp"
            app:srcCompat="@drawable/chart"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.2"/>
        <!--<ImageView-->
            <!--android:padding="10dp"-->
            <!--app:srcCompat="@drawable/calendar"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content" />-->
        <ImageView
            android:onClick="finishThis"
            android:padding="10dp"
            app:srcCompat="@drawable/check"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.3"/>
        <ImageView
            android:id="@+id/tabSuggestion"
            android:padding="10dp"
            app:srcCompat="@drawable/note"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>